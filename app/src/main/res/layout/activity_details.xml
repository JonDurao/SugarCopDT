<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dtapps.sugarcop.DetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_details" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/details_fab_insert_portion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tint="@color/colorAccentLightest"
        android:src="@drawable/ic_add"
        android:layout_gravity="end|bottom"
        app:fabSize="normal"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/details_fab_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="center_vertical"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        app:layout_anchor="@id/details_fab_insert_portion"
        app:fabSize="mini"
        android:tint="@color/colorAccentLightest"
        android:src="@drawable/ic_edit" />

</android.support.design.widget.CoordinatorLayout>
