<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intro_cl_slide_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_slider_screen1"
    android:theme="@style/AppIntro">

    <TextView
        android:id="@+id/intro_tv_slide_one_add_user_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/string_intro_welcome"
        android:text="@string/string_intro_welcome"
        android:textAppearance="@style/AppIntro.WhiteTextTitle"
        android:theme="@style/AppIntro.SlideTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/intro_iv_slide_one_welcome_icon"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:contentDescription="@string/string_about_cd_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_tv_slide_one_add_user_name"
        app:srcCompat="@drawable/ic_main_donut" />

</android.support.constraint.ConstraintLayout>